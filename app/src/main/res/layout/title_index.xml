<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_title_height"
        android:id="@+id/homeTitle"
        android:background="@color/white">

        <ImageView
            android:id="@+id/titleLeftImage"
            android:layout_width="25dp"
            android:layout_height="@dimen/title_image_height"
            android:onClick="onGoBackButton"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
             />
        <TextView
            android:id="@+id/titleLeftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/titleText"
            android:layout_toRightOf="@id/titleLeftImage"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxEms="10"
            android:singleLine="true"
            android:ellipsize="end"/>


        <ImageView
            android:id="@+id/titleRightLeftImage"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_toLeftOf="@+id/titleRightImage"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />


        <ImageView
            android:id="@+id/titleRightImage"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_height"
            android:layout_toLeftOf="@+id/titleRightText"
            android:layout_marginRight="2dp"
            android:layout_centerVertical="true"
            />

        <TextView
            android:id="@+id/titleRightText"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:singleLine="true"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:layout_marginRight="10dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</merge>