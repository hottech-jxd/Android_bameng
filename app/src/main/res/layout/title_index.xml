<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_title_height"
        android:id="@+id/homeTitle"
        android:background="@color/white">

        <ImageView
            android:id="@+id/titleLeftImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:paddingRight="15dp"
            android:onClick="onGoBackButton"
            android:layout_centerVertical="true"
            android:layout_marginLeft="0dp"/>
        <TextView
            android:id="@+id/titleLeftText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/titleText"
            android:layout_toRightOf="@id/titleLeftImage"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/black"
            android:textSize="15sp"
            android:maxEms="10"
            android:maxLines="1"
            android:ellipsize="end"/>

        <ImageView
            android:id="@+id/titleRightLeftImage"
            android:layout_width="@dimen/title_image_width"
            android:layout_height="@dimen/title_image_width"
            android:layout_toLeftOf="@+id/titleRightImage"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            />

        <ImageView
            android:id="@+id/titleRightImage"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:layout_toLeftOf="@+id/titleRightText"
            android:layout_marginRight="0dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/titleRightText"
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:textSize="15sp"
            android:textColor="@color/black"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:paddingTop="6dp"
            android:paddingBottom="6dp"
            android:paddingRight="0dp"
            android:paddingLeft="0dp"
            android:layout_marginRight="0dp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/line_gray"/>

    </LinearLayout>

</merge>