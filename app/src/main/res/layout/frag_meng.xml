<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.bameng.fragment.MengFragment">
    <com.bameng.widgets.BmSwipeRefreshLayout
        android:id="@+id/swipeRefreshLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:id="@+id/llcontainer"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <LinearLayout
                android:id="@+id/llsort"
                android:background="@color/white"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/sortLevel"
                    android:layout_width="0dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:text="盟友等级"
                    android:gravity="center"
                    android:drawableRight="@mipmap/ic_asc"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sortsubCount"
                    android:layout_width="0dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableRight="@mipmap/ic_nosort"
                    android:text="客户信息量"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/sortOrderCount"
                    android:text="订单成交量"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:gravity="center"
                    android:drawableRight="@mipmap/ic_nosort"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        </LinearLayout>

    </com.bameng.widgets.BmSwipeRefreshLayout>

</FrameLayout>
