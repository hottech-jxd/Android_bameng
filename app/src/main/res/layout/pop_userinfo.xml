<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cy="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layAll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/layedt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
        android:id="@+id/layMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/txtTitle"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"/>

            <com.huotu.android.library.libedittext.EditText
            android:layout_toRightOf="@+id/txtTitle"
            android:id="@+id/edtName"
            cy:style="transparent"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:maxLines="1"
            android:maxLength="30"
            android:textSize="14sp"
            android:hint=""
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp" />

            <TextView
                android:layout_alignLeft="@id/edtName"
                android:layout_below="@id/txtTitle"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginTop="5dp"
                android:layout_marginRight="20dp"
                android:background="@color/line_gray"/>

    </RelativeLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_horizontal"
            android:padding="10dp" >


            <LinearLayout
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="right">


            <TextView
                android:id="@+id/btnSure"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_cancel"
                android:gravity="center"
                android:padding="8dp"
                android:text="保存"
                android:textColor="@color/white" />
            </LinearLayout>
            <LinearLayout
                android:visibility="gone"
                android:padding="10dp"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="center">

            <TextView
                android:id="@+id/btnCancel1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_gray"
                android:gravity="center"
                android:padding="8dp"
                android:visibility="gone"
                android:text="取消"
                android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/laysex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:padding="10dp" >

            <TextView
                android:id="@+id/sex_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:text="男"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"/>

            <TextView
                android:id="@+id/sex_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:text="女"
                android:textColor="@color/black" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/line_gray"/>

        <TextView
            android:id="@+id/sex_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="未知"
            android:textColor="@color/black" />
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
            <TextView
                android:visibility="gone"
                android:id="@+id/btn_Cancel2"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:padding="10dp"
                android:background="@drawable/btn_cancel"
                android:text="取消"
                android:textColor="@color/white" />
        </LinearLayout>


    <LinearLayout
        android:id="@+id/layShopStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/noInShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="未进店"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/inShop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="已进店"
            android:textColor="@color/black" />
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_Cancel3"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/btn_cancel"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="10dp">
        <TextView
            android:id="@+id/noDeal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/noDeal"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/deal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/deal"
            android:textColor="@color/black" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
        <TextView
            android:id="@+id/backorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/backorder"
            android:textColor="@color/black" />
        <TextView
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_gray"/>
        <TextView
            android:visibility="gone"
            android:id="@+id/btn_Cancel4"
            android:layout_gravity="center"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:padding="10dp"
            android:background="@drawable/btn_cancel"
            android:text="取消"
            android:textColor="@color/white" />
    </LinearLayout>

</LinearLayout>