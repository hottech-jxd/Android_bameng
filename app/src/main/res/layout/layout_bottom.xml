<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
              android:layout_gravity="bottom"
    android:id="@+id/homeBottom"

    android:layout_alignParentBottom="true"
    android:orientation="vertical">
    <!-- 普通底部导航 -->
    <LinearLayout
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:id="@+id/main_bottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/act_bottom_height"
        android:background="@drawable/account_bg_draw_top"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/homePage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTabClicked"
            android:padding="3dp" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/homeImg"
                    android:layout_width="@dimen/title_image_width"
                    android:layout_height="@dimen/bottom_image_height"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_launcher"
                    android:focusable="false"
                    android:scaleType="centerInside" />

                <TextView
                    android:id="@+id/homeTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/homeImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="首页"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/tabhost_text_size" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/newsPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTabClicked"
            android:padding="3dp" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/newsImg"
                    android:layout_width="@dimen/title_image_width"
                    android:layout_height="@dimen/bottom_image_height"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_launcher"
                    android:focusable="false"
                    android:scaleType="centerInside"/>

                <TextView
                    android:id="@+id/newsTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/newsImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="资讯"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/tabhost_text_size" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/businessPage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTabClicked"
            android:padding="3dp" >
            <RelativeLayout
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:layout_height="match_parent">
                <ImageView
                    android:id="@+id/businessImg"
                    android:layout_width="@dimen/title_image_width"
                    android:layout_height="@dimen/bottom_image_height"
                    android:layout_centerHorizontal="true"
                    android:background="@mipmap/ic_launcher"
                    android:focusable="false"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/businessTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/businessImg"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="2dp"
                    android:text="我的业务"
                    android:textColor="@color/text_color_black"
                    android:textSize="@dimen/tabhost_text_size" />
            </RelativeLayout>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profilePage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:onClick="onTabClicked"
            android:padding="3dp" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="@dimen/title_image_width"
                android:layout_height="@dimen/bottom_image_height"
                android:layout_centerHorizontal="true"
                android:background="@mipmap/ic_launcher"
                android:focusable="false"
                android:scaleType="centerInside" />

            <TextView
                android:id="@+id/profileTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profileImg"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="2dp"
                android:text="我的账号"
                android:textColor="@color/text_color_black"
                android:textSize="@dimen/tabhost_text_size" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>